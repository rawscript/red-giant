{
  "name": "rgtp",
  "version": "1.0.0",
  "description": "Node.js bindings for Red Giant Transport Protocol (RGTP) - A revolutionary Layer 4 transport protocol implementing exposure-based data transmission",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "node-gyp build",
    "rebuild": "node-gyp rebuild",
    "clean": "node-gyp clean",
    "test": "node test/test.js",
    "example": "node examples/simple_transfer.js",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build"
  },
  "keywords": [
    "rgtp",
    "red-giant",
    "transport-protocol",
    "layer4",
    "networking",
    "multicast",
    "p2p",
    "streaming",
    "cdn",
    "exposure-based",
    "chunk-transfer",
    "adaptive-flow-control",
    "stateless",
    "resume-capability",
    "packet-loss-resilient",
    "high-performance",
    "native-addon"
  ],
  "author": {
    "name": "Red Giant Protocol Team",
    "email": "jasemwaura@ieee.org",
    "url": "https://redgiant-protocol.org"
  },
  "contributors": [
    {
      "name": "RGTP Core Team",
      "email": "core@redgiant-protocol.org"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/red-giant/rgtp.git",
    "directory": "bindings/node"
  },
  "bugs": {
    "url": "https://github.com/red-giant/rgtp/issues"
  },
  "homepage": "https://github.com/red-giant/rgtp#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0",
    "mocha": "^10.0.0",
    "chai": "^4.3.0"
  },
  "peerDependencies": {
    "node-gyp": ">=9.0.0"
  },
  "gypfile": true,
  "binary": {
    "module_name": "rgtp_native",
