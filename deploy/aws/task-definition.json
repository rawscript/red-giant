{
  "family": "red-giant-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "red-giant-server",
      "image": "${ECR_URI}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 9090,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "RED_GIANT_PORT",
          "value": "8080"
        },
        {
          "name": "RED_GIANT_HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "RED_GIANT_WORKERS",
          "value": "8"
        },
        {
          "name": "RED_GIANT_METRICS_ENABLED",
          "value": "true"
        },
        {
          "name": "RED_GIANT_METRICS_PORT",
          "value": "9090"
        },
        {
          "name": "CLOUD_PROVIDER",
          "value": "aws"
        },
        {
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/red-giant",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}